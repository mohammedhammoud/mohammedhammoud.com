---
import Card from "@shared/components/Card.astro";

interface Props {
  title: string;
  date: string;
  readingTime: string;
  excerpt: string;
  href: string;
  language: string;
  showLanguageBadge: boolean;
}

const { title, date, readingTime, excerpt, href, language, showLanguageBadge } =
  Astro.props;
---

<a href={href} class="group block" data-testid="blog-post-link">
  <Card variant="bordered" hover={true}>
    <div class="mb-2 flex items-start justify-between gap-3">
      <h2
        class="text-xl font-medium text-gray-900 transition-colors group-hover:text-blue-600 dark:text-gray-100 dark:group-hover:text-blue-400"
      >
        {title}
      </h2>
      {
        showLanguageBadge && (
          <span class="mt-0.5 shrink-0 rounded border border-gray-300 px-1.5 py-0.5 text-xs font-medium tracking-wide text-gray-500 uppercase dark:border-gray-600 dark:text-gray-400">
            {language}
          </span>
        )
      }
    </div>
    <div
      class="mb-3 flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400"
    >
      <time>{date}</time>
      <span aria-hidden="true">â€¢</span>
      <span>{readingTime}</span>
    </div>
    <p class="text-base leading-relaxed text-gray-700 dark:text-gray-300">
      {excerpt}
    </p>
  </Card>
</a>
