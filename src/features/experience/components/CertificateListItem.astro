---
import Card from "@shared/components/Card.astro";

interface Props {
  title: string;
  year: string;
  description: string;
  credentialId?: string;
  credentialUrl?: string;
  credentialLabel?: string;
}

const {
  title,
  year,
  description,
  credentialId,
  credentialUrl,
  credentialLabel,
} = Astro.props;
---

<Card variant="bordered">
  <h3 class="mb-1 text-lg font-medium text-gray-900 dark:text-gray-100">
    {title}
  </h3>
  <p class="mb-3 text-sm text-gray-500 dark:text-gray-400">{year}</p>
  <p class="text-sm leading-relaxed text-gray-700 dark:text-gray-300">
    {description}
  </p>
  {
    credentialId && credentialLabel && (
      <p class="mt-3 text-xs text-gray-500 dark:text-gray-400">
        {credentialLabel}{" "}
        {credentialUrl ? (
          <a
            href={credentialUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-600 hover:underline dark:text-blue-400"
          >
            {credentialId}
          </a>
        ) : (
          credentialId
        )}
      </p>
    )
  }
</Card>
