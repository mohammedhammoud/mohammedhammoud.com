---
interface Props {
  href?: string;
  active?: boolean;
  type?: "button" | "submit" | "reset";
  dataTag?: string;
  dataTagChip?: boolean;
  ariaPressed?: "true" | "false";
  class?: string;
}

const {
  href,
  active = false,
  type = "button",
  dataTag,
  dataTagChip = false,
  ariaPressed,
  class: className = "",
} = Astro.props;

const Tag = href ? "a" : "button";
---

<Tag
  href={href}
  type={href ? undefined : type}
  data-tag={dataTag}
  data-tag-chip={dataTagChip ? "" : undefined}
  aria-pressed={ariaPressed}
  class:list={[
    "rounded-full border px-3 py-1 text-sm transition-colors",
    active
      ? "border-blue-500 bg-blue-50 text-blue-700 dark:bg-blue-950/30 dark:text-blue-200"
      : "border-gray-300 text-gray-700 hover:border-blue-400 hover:text-blue-600 dark:border-gray-600 dark:text-gray-300 dark:hover:border-blue-400 dark:hover:text-blue-300",
    className,
  ]}
>
  <slot />
</Tag>
