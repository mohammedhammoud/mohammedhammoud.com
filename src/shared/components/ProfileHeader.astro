---
interface SocialLink {
  name: string;
  url: string;
  icon: { title: string; path: string };
}

interface Props {
  name: string;
  bio: string;
  imageSrc: string;
  imageAlt?: string;
  socialLinks: SocialLink[];
  href: string;
}

const { name, bio, imageSrc, imageAlt = name, socialLinks, href } = Astro.props;
---

<div class="flex flex-col items-center text-center">
  <a href={href}>
    <img
      src={imageSrc}
      alt={imageAlt}
      class="mb-6 h-32 w-32 rounded-full object-cover transition-opacity hover:opacity-80"
    />
  </a>
  <h1 class="mb-4 font-serif text-4xl text-gray-900 dark:text-gray-100">
    {name}
  </h1>
  <p
    class="mb-4 max-w-2xl text-base leading-relaxed text-gray-700 dark:text-gray-300"
  >
    {bio}
  </p>

  <div class="flex gap-4">
    {
      socialLinks.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100"
          title={link.name}
        >
          <svg
            role="img"
            viewBox="0 0 24 24"
            width="24"
            height="24"
            fill="currentColor"
            aria-hidden="true"
          >
            <title>{link.icon.title}</title>
            <path d={link.icon.path} />
          </svg>
        </a>
      ))
    }
  </div>
</div>
